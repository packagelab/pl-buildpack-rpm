#!/bin/bash

# fail fast
set -o errexit
set -o nounset
set -o pipefail

scriptname=$(basename $0)
case $# in
  1) :;;
  *) echo "$scriptname: usage: $scriptname BUILD_DIR" >&2; exit 2;;
esac

build_dir="$1"

# Basic build dependencies
echo '
autoconf
automake
bison
byacc
elfutils
flex
gcc
gcc-c++
gettext
libtool
make
patch
patchutils
pkgconfig
redhat-rpm-config
rpm-build
rpmdevtools
tar
unzip
wget
'
# Extract list of build dependencies from spec file
$(dirname $0)/yum-printbuilddep -q $build_dir/*.spec
