#!/bin/bash

# fail fast
set -o errexit
set -o nounset
set -o pipefail

scriptname=$(basename $0)
case $# in
  1) :;;
  *) echo "$scriptname: usage: $scriptname BUILD_DIR" >&2; exit 2;;
esac

build_dir="$1"

cd $build_dir >/dev/null 2>&1

echo "---"
echo "artifacts:"
for pkg in *.rpm
do
  echo "   - $pkg"
done

cd - >/dev/null 2>&1
